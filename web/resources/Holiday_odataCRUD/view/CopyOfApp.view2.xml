<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:smartTable="sap.ui.comp.smarttable"
	controllerName="opensap.odataBasic.controller.App" height="100%">
	<Page title="{i18n>appTitle}">
		<content>
			<ScrollContainer height="100%" width="100%" horizontal="true" vertical="true">
				<VBox fitContainer="true">
					<smartTable:SmartTable id="holidayTable" header="{i18n>UList}" editable="false" entitySet="Holidays" showRowCount="true"
						requestAtLeastFields="DATE,PROVINCE,HOLIDAY_ID" enableAutoBinding="true" showFullScreenButton="true" tableType="ResponsiveTable">
						<Table>
							<columns>
								<Column id="DATE">
									<customData>
										<core:CustomData key="p13nData" value='\{"columnKey": "DATE", "leadingProperty": "DATE", "sortProperty": "DATE", "columnIndex":"1"}'/>
									</customData>
									<Text text="{i18n>DateId}"/>
								</Column>
								<Column id="PROVINCE">
									<customData>
										<core:CustomData key="p13nData" value='\{"columnKey": "PROVINCE", "leadingProperty": "PROVINCE", "maxLength": "40","columnIndex":"2"}'/>
									</customData>
									<Text text="{i18n>ProvinceId}"/>
								</Column>
								<Column id="HOLIDAY_ID">
									<customData>
										<core:CustomData key="p13nData" value='\{"columnKey": "HOLIDAY_ID", "leadingProperty": "HOLIDAY_ID", "maxLength": "40","columnIndex":"3"}'/>
									</customData>
									<Text text="{i18n>HolidayId}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<ObjectIdentifier text="{ path: 'DATE', type: 'sap.ui.model.odata.type.DateTime', constraints: { displayFormat: 'Date' } }"></ObjectIdentifier>
										<ObjectIdentifier text="{ path: 'PROVINCE', formatter: '.formatter.formatProvince' }"></ObjectIdentifier>
										<ObjectIdentifier text="{ path: 'HOLIDAY_ID', formatter: '.formatter.formatHoliday' }"></ObjectIdentifier>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</smartTable:SmartTable>
				</VBox>
			</ScrollContainer>
		</content>
	</Page>
</mvc:View>