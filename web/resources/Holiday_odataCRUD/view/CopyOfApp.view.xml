<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:smartTable="sap.ui.comp.smarttable"
	controllerName="opensap.odataBasic.controller.App" height="100%">
	<Page title="{i18n>appTitle}">
		<content>
			<ScrollContainer height="100%" width="100%" horizontal="true" vertical="true">
				<VBox fitContainer="true">
					<smartTable:SmartTable id="holidayTable" header="{i18n>UList}" editable="false" entitySet="Holidays" showRowCount="true"
						requestAtLeastFields="DATE,PROVINCE,HOLIDAY_ID" enableAutoBinding="true" showFullScreenButton="true" tableType="ResponsiveTable">
						<Table>
							<columns>
								<Column id="DateId">
									<customData>
										<core:CustomData key="p13nData" value='\{"columnKey": "UserId", "leadingProperty": "DATE", "sortProperty": "UserId", "columnIndex":"1"}'/>
									</customData>
									<Text text="{i18n>UserId}"/>
								</Column>
								<Column hAlign="Left">
									<header>
										<Text text="Province"/>
									</header>
								</Column>
								<Column hAlign="Left">
									<header>
										<Text text="Holiday"/>
									</header>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<ObjectIdentifier text="{DATE}"></ObjectIdentifier>
										<ObjectIdentifier text="{PROVINCE}"></ObjectIdentifier>
										<ObjectIdentifier text="{HOLIDAY_ID}"></ObjectIdentifier>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</smartTable:SmartTable>
				</VBox>
			</ScrollContainer>
		</content>
	</Page>
</mvc:View>