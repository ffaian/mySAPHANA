<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" controllerName="opensap.odataBasic.controller.App" height="100%">
	<Page title="{i18n>appTitle}">
		<content>
			<ScrollContainer height="100%" width="100%" horizontal="true" vertical="true">
				<VBox fitContainer="true">
					<smartFilterBar:SmartFilterBar id="smartFilterBar" entityType="HolidaysType">
						<smartFilterBar:controlConfiguration>
							<smartFilterBar:ControlConfiguration key="DATE" visibleInAdvancedArea="true" preventInitialDataFetchInValueHelpDialog="false"></smartFilterBar:ControlConfiguration>
						</smartFilterBar:controlConfiguration>
					</smartFilterBar:SmartFilterBar>
					<smartTable:SmartTable id="holidayTable" header="{i18n>UList}" editable="false" entitySet="Holidays" showRowCount="true"
						requestAtLeastFields="DATE,PROVINCE,HOLIDAY_ID" enableAutoBinding="true" showFullScreenButton="true" tableType="ResponsiveTable"
						smartFilterId="smartFilterBar">
						<Table>
							<headerToolbar>
								<Toolbar>
									<content>
										<Button text="Create" type="Transparent" icon="sap-icon://add"/>
										<Button text="Edit" type="Transparent" icon="sap-icon://edit"/>
										<Button text="Delete" type="Transparent" icon="sap-icon://delete"/>
										<ToolbarSpacer/>
										<Label text="Searching by:"/>
										<ComboBox xmlns="sap.m" id="mySearchCombo" selectedKey="1">
											<items>
												<core:Item xmlns:core="sap.ui.core" key="1" text="by Date" id="Date"/>
												<core:Item xmlns:core="sap.ui.core" key="2" text="by Province" id="Province"/>
												<core:Item xmlns:core="sap.ui.core" key="3" text="by Holiday ID" id="Holiday"/>
											</items>
										</ComboBox>
										<Label/>
										<SearchField width="300px" placeholder="Search" showRefreshButton="true" tooltip="Search by selected attribute" liveChange='onLiveSearch'/>
									</content>
								</Toolbar>
							</headerToolbar>
							<columns>
								<Column id="DATE">
									<customData>
										<core:CustomData key="p13nData"
											value="\{&quot;columnKey&quot;: &quot;DATE&quot;, &quot;leadingProperty&quot;: &quot;DATE&quot;, &quot;sortProperty&quot;: &quot;DATE&quot;, &quot;columnIndex&quot;:&quot;1&quot;}"/>
									</customData>
									<Text text="{i18n>DateId}"/>
								</Column>
								<Column id="PROVINCE">
									<customData>
										<core:CustomData key="p13nData"
											value="\{&quot;columnKey&quot;: &quot;PROVINCE&quot;, &quot;leadingProperty&quot;: &quot;PROVINCE&quot;, &quot;maxLength&quot;: &quot;40&quot;,&quot;columnIndex&quot;:&quot;2&quot;}"/>
									</customData>
									<Text text="{i18n>ProvinceId}"/>
								</Column>
								<Column id="HOLIDAY_ID">
									<customData>
										<core:CustomData key="p13nData"
											value="\{&quot;columnKey&quot;: &quot;HOLIDAY_ID&quot;, &quot;leadingProperty&quot;: &quot;HOLIDAY_ID&quot;, &quot;maxLength&quot;: &quot;40&quot;,&quot;columnIndex&quot;:&quot;3&quot;}"/>
									</customData>
									<Text text="{i18n>HolidayId}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<ObjectIdentifier text="{ path: 'DATE', type: 'sap.ui.model.odata.type.DateTime', constraints: { displayFormat: 'Date' } }"/>
										<ObjectIdentifier text="{ path: 'PROVINCE', formatter: '.formatter.formatProvince' }"/>
										<ObjectIdentifier text="{ path: 'HOLIDAY_ID', formatter: '.formatter.formatHoliday' }"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</smartTable:SmartTable>
				</VBox>
			</ScrollContainer>
		</content>
	</Page>
</mvc:View>